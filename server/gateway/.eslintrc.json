{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "browser": false,
        "jest": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": false
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "import/extensions" : [0],
        "indent"            : ["error", 2],
        "semi"              : ["error", "always"],
        "quotes"            : ["error", "double"],
        "no-console"        : 0
    }
  }
  